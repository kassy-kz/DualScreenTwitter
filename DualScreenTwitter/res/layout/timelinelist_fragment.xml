<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/timelineNormalHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/timelineTitleTextView" 
            android:text="tmp"
            android:textColor="#ffffffff"
            android:background="@drawable/dark_header"
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
        </TextView>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/timelineProgressHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <ProgressBar 
            android:id="@+id/timelineProgressBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
        />
        <TextView
            android:id="@+id/timelineProgressTitle" 
            android:text="tmp"
            android:layout_marginLeft="10dip"
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"    
        />
    </FrameLayout>
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/timelineListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal|top"    
            android:padding="5dip"
            android:id="@+id/timeline_first_progress"
            >
            <ProgressBar 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
            />
            <TextView
                android:text="@string/getting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timelineFooterText"
                android:textSize="20dip"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dip"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/grad_footer"    
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/timelineUpdateButton"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:padding="2dip"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:background="@xml/fragment_btn_bgcolor"
                android:src="@drawable/ic_menu_refresh" />
            <ImageButton
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:background="@xml/fragment_btn_bgcolor"
                android:id="@+id/timelineSettingButton"
                android:src="@android:drawable/ic_menu_preferences" />
        </LinearLayout>
    </FrameLayout>    
</LinearLayout>
